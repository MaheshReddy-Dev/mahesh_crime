<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-4">
      <h1><strong>Batman login page</strong></h1>
      <%= form_with(scope: :session, url: login_path, class: "form-signin") do |f| %>
        <div class="form-label-group">
          <%= f.label "username:", class: "sr-only" %>
          <%= f.text_field :username, class: "form-control", placeholder: "Username", required: true, autofocus: true %>
        </div>
        <div class="form-label-group">
          <%= f.label "password:", class: "sr-only" %>
          <%= f.password_field :password, class: "form-control", placeholder: "Password", required: true %>
        </div><br/>
        <%= f.submit "Sign in", class: "btn btn-lg btn-primary btn-block" %>
        <%= link_to "back", root_path,class: "btn btn-lg btn-primary btn-block"%>
      <% end %>
    </div>
  </div>
</div>
