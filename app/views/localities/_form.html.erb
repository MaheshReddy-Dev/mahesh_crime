  <%= form_with(model: locality, class: "form-horizontal") do |f| %>
    <div class="form-group">
      <%= f.label :locality, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :locality, class: "form-control" %>
      </div>
      <% if @locality.new_record? %>
      <%=f.hidden_field :city_id, value: params[:city_id]%>
    <% end %>
    </div>
  
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit "Save", class: "btn btn-primary" %>
        <%= link_to "Back to crimes", root_path, class: "btn btn-default" %>
      </div>
    </div>
  <% end %>
  